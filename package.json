{
    "name": "vscode-fwf",
    "displayName": "Fixed Width Format Viewer",
    "description": "Extension for viewing and validating fixed-width format files",
    "version": "0.0.1",
    "publisher": "jjbono",
    "private": false,
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/vscode-fwf"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Programming Languages",
        "Other"
    ],
    "keywords": [
        "fixed width",
        "flat file",
        "data viewer",
        "format viewer",
        "text processing"
    ],
    "activationEvents": [
        "onLanguage:fwf"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [{
            "id": "fwf",
            "aliases": ["Fixed Width Format", "fwf"],
            "extensions": [".fwf", ".txt"],
            "configuration": "./language-configuration.json"
        }],
        "commands": [
            {
                "command": "vscode-fwf.defineFormat",
                "title": "FWF: Define Format"
            },
            {
                "command": "vscode-fwf.importFormat",
                "title": "FWF: Import Format"
            },
            {
                "command": "vscode-fwf.exportFormat",
                "title": "FWF: Export Format"
            },
            {
                "command": "vscode-fwf.clearFormat",
                "title": "FWF: Clear Format"
            },
            {
                "command": "vscode-fwf.showFormat",
                "title": "FWF: Show Format"
            }
        ],
        "configuration": {
            "title": "Fixed Width Format",
            "properties": {
                "fwf.currentFormat": {
                    "type": "object",
                    "default": null,
                    "description": "Current format definition"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "jest --coverage",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/vscode": "^1.85.0",
        "@types/node": "^20.10.0",
        "@types/jest": "^29.5.0",
        "@typescript-eslint/eslint-plugin": "^6.13.0",
        "@typescript-eslint/parser": "^6.13.0",
        "eslint": "^8.54.0",
        "typescript": "^5.3.2",
        "jest": "^29.5.0",
        "ts-jest": "^29.1.0",
        "@vscode/test-electron": "^2.3.8"
    }
} 